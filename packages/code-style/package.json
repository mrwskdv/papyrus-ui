{
  "name": "@papyrus-ui/code-style",
  "version": "0.9.2",
  "description": "Shareable ESLint configurations for JavaScript and TypeScript projects using ESLint 9+ flat config format.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./prettier": {
      "types": "./dist/types/prettier.d.ts",
      "import": "./dist/es/prettier.js",
      "require": "./dist/cjs/prettier.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:watch": "npm test --watch",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@eslint/js": "^9.0.0",
    "@next/eslint-plugin-next": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.0.0"
  },
  "peerDependencies": {
    "eslint": ">=9.7.0",
    "next": ">=13.0.0",
    "prettier": ">=3.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "prettier": {
      "optional": false
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "typescript",
    "react",
    "storybook",
    "jest",
    "prettier",
    "flat-config",
    "nextjs"
  ],
  "author": "Papyrus UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/papyrus-ui/papyrus-ui.git",
    "directory": "packages/code-style"
  }
}
