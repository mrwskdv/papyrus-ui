    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-banner2": "^1.3.0",
    "tailwindcss": "^3.4.1",
    "typescript": "4.7.4",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.2"
