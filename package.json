{
  "name": "papyrus-ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=11.0.0"
  },
  "workspaces": ["packages/*"],
  "scripts": {
    "docs": "storybook dev -p 6006",
    "build": "npm run build:papyrus-ui",
    "build:papyrus-ui": "lerna run --scope papyrus-ui --stream build",
    "build:docs": "storybook build",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "ci:release": "lerna publish from-package --yes",
    "ci:versionup:patch": "lerna version patch --no-push --no-git-tag-version --yes && npm run commit-version",
    "ci:versionup:minor": "lerna version minor --no-push --no-git-tag-version --yes && npm run commit-version",
    "ci:versionup:major": "lerna version major --no-push --no-git-tag-version --yes && npm run commit-version",
    "commit": "node @commitlint/prompt-cli/cli.js",
    "commit-version": "git add . && git commit -m \"chore(release): v`node -p 'import(\"./lerna.json\").then(m => m.default.version)'`\"",
    "format": "npm run format:ts && npm run format:js && npm run format:json && npm run format:yaml",
    "format:ts": "prettier --parser typescript --write \"**/*.{ts,tsx}\" --loglevel error",
    "format:js": "prettier --write \"**/*.js\"  --loglevel error",
    "format:json": "prettier --parser json --write \"**/*.{json,prettierrc}\" --loglevel error",
    "format:yaml": "prettier --parser yaml --write \"**/*.{yml,yaml}\" --loglevel error",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:quiet": "eslint . --cache --quiet",
    "prepare": "husky",
    "release": "lerna publish from-package",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:ci": "mkdir -p __reports__ && npm test --json --outputFile=__reports__/jest-results.json --ci --coverage --runInBand",
    "test:watch": "npm test --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "versionup": "lerna version"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-workspace-scopes": "^19.8.1",
    "@eslint/js": "^8.35.0",
    "@faker-js/faker": "^8.4.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-mdx-gfm": "^8.6.14",
    "@storybook/addon-storysource": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/preview-api": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@swc/core": "^1.3.40",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest-axe": "^3.5.4",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autoprefixer": "^10.4.21",
    "boxicons": "^2.1.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^9.3.2",
    "husky": "^9.1.7",
    "jest": "27.5.1",
    "jest-axe": "^9.0.0",
    "lerna": "^8.2.2",
    "license-checker": "^25.0.1",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "postcss": "^8.4.39",
    "prettier": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.6.14",
    "tailwindcss": "3.x.x",
    "typescript": "4.7.4",
    "vite": "^6.3.5"
  }
}
